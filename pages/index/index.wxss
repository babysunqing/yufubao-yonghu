/**index.wxss**/
page{
  background-color: #f5f5f5
}
.container{
  padding: 0;
}
.user{
  width: 100%;
  color: #fff;
}
.bgimg{
  width: 100%;
  height: 100px;
}
.userImg image{
  position: absolute;
  top: 32rpx;
  left: 32rpx;
  width:140rpx;
  height:140rpx;
  border-radius: 50%;
  float:left;
  margin-right:40rpx; 
}
 .userName{
  position: absolute;
  top: 52rpx;
  left: 204rpx;
  font-size: 32rpx;
} 
 .userTel{
  position: absolute;
  top: 112rpx;
  left: 204rpx;
  font-size: 28rpx;
  margin-top: 5rpx
}
.cardAndGetMoney{
  width: 100%;
  background-color: #fff;
  margin-top: 20rpx;
}
.card,.getMoney{
  height:100rpx;
  border-bottom: 1px #f5f5f5 solid;
  font-size: 30rpx;
  color: #333;
  margin-left: 24rpx;
  line-height: 100rpx
}
.cardAndGetMoney image{
  width: 48rpx;
  height: 48rpx;
   margin-top: 26rpx; 
  float: left
}
.cardAndGetMoney text{
  margin-left: 24rpx;
  float: left;
}
.cardAndGetMoney .more{
  color: #999;
  position: absolute;
  right: 30rpx;
}
.cardList{
  width: 100%;
  height: auto;
  background-color: #f5f5f5;
  padding-bottom: 32rpx;
}
.cradItem{
  width: 90%;
  height: 228rpx;
  background-color: #fff;
  margin-left: 5%;
  margin-top: 20rpx;
  border-radius: 6px
}
.cardMian{
  height: 164rpx;
  background-color: #BF793A;
  border-top-left-radius:6px;
  border-top-right-radius:6px;
  position: relative
}
.cardMian image{
  width: 100rpx;
  height: 100rpx;
  margin-top: 32rpx;
  margin-left: 24rpx;
  float: left
}
.cardMian .cardTitle{
  position: absolute;
  top: 44rpx;
  left: 140rpx;
  font-size: 24rpx;
  color: #fff;
  
}
.cardMian .cardDetail{
  position: absolute;
  top: 84rpx;
  left: 140rpx;
  font-size: 34rpx;
  color: #fff;
}
.cardTime{
  height: 64rpx;
  line-height: 64rpx;
  font-size: 24rpx;
  color: #c2c2c2;
}
.cardTime .time{
  font-size: 24rpx;
  color: #c2c2c2;
  margin-left: 24rpx;
  float: left
}
.cardTime .more{
  float: right;
  margin-right: 16rpx
}
.cardTime .clickDetail{
  float: right;
  margin-right: 5rpx
}
.icon-xiala{
  font-size: 28rpx;
}