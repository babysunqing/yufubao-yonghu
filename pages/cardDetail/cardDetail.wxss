/* pages/cardDetail/cardDetail.wxss */
.container{
  width: 100%;
}
.cradItem{
  width: 90%;
  height: 228rpx;
  background-color: #fafafa;
  /* margin-left: 5%; */
  margin-top: 20rpx;
  border-radius: 6px;
  box-shadow: 0 0 10px 0 rgba(0,0,0,0.10)
}
.cardMian{
  height: 164rpx;
  background-color: #9cbf3a;
  border-top-left-radius:6px;
  border-top-right-radius:6px;
  position: relative
}
.cardMian image{
  width: 100rpx;
  height: 100rpx;
  margin-top: 32rpx;
  margin-left: 24rpx;
  float: left
}
.cardMian .cardTitle{
  position: absolute;
  top: 44rpx;
  left: 140rpx;
  font-size: 24rpx;
  color: #fff;
  
}
.cardMian .cardDetail{
  position: absolute;
  top: 84rpx;
  left: 140rpx;
  font-size: 34rpx;
  color: #fff;
}
.cardTime{
  height: 64rpx;
  line-height: 64rpx;
  font-size: 24rpx;
  color: #c2c2c2;
}
.cardTime .time{
  font-size: 24rpx;
  color: #c2c2c2;
  margin-left: 24rpx;
  float: left
}
.item{
  width: 100%;
  height: 92rpx;
  border-bottom: 1px #f5f5f5 solid;
  line-height: 92rpx;
  color: #333;
  font-size: 30rpx;
}
.item1{
  margin-top: 32rpx;
}
.item .title{
  margin-left: 32rpx;
  float: left
}
.item text{
  float: right;
  margin-right: 32rpx;
}
.item .banlence{
  color: #f5a623
}